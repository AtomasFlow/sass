<div class="page">
  <div class="header">	
		{{#with header}}
		<header class="header__content">
			<div class="header__block">
				<img class="header__icon" src="/svg/apple.svg" alt="Apple">

				<nav class="header__block">
					{{#each links}}
					<a class="header__link" href="{{url}}">{{text}}</a>
					{{/each}}
				</nav>
			</div>

			<div class="header__block">
				<img src="/svg/search.svg" alt="Search">
				<img src="/svg/profile.svg" alt="Profile">
			</div>
		</header>
		{{/with}}
	</div>

	<div class="ad">
		<div class="ad__content">
			{{#with header.ad}}
			<p class="ad__text">{{title}}</p>
			{{#with link}}
			<a class="ad__link" href="{{url}}">{{text}}</a>
			{{/with}}
			{{/with}}
		</div>
	</div>




	{{#with iphone_pro}}
	<section class="product product--big product--iphone--pro product--dark product--top">
		<div class="product__content">
			<h1 class="product__title">{{title}}</h1>
			<p class="product__description">{{descriptions}}</p>
			<div class="product_action">
				{{#with link}}
				{{#each text}}
				<a href="{{../link}}" class="product__link">{{this}}</a>
				{{/each}}
				{{/with}}
			</div>
		</div>
	</section>
	{{/with}}

